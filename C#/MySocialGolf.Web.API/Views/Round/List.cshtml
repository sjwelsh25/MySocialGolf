@model MySocialGolf.Web.Models.ViewModels.UserGolfRoundListViewModel

@{
    ViewBag.Title = "List";
}

<h2>Rounds</h2>

<form class="input-group">
    <span class="input-group-addon"><span class="glyphicon glyphicon-search"></span></span>
    <input type="text" class="form-control" placeholder="Search Friends">
</form>
<br />

<div class="container">
    <div class="row h4">
        <div class="col-xs-6">Course</div>
        <div class="col-xs-3">Handicap</div>
        <div class="col-xs-3">Date</div>
    </div>
    <div class="list-group">
        @foreach (var round in Model.UserGolfRoundDTOList)
        {
            <div class="row">
                <a href="#" class="list-group-item">
                    <div class="row">
                        <div class="col-xs-6">@round.GolfCourseName</div>
                        <div class="col-xs-3">@round.HandicapThatDay</div>
                        <div class="col-xs-3">@round.GolfRoundDate.Value.ToString("dd/MM/yy")</div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
